{
  "hooks": {},
  "alwaysThinkingEnabled": false,
  "includeCoAuthoredBy": false,
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Read(~/**)",
      "WebFetch",
      "Bash(npm run:*)",
      "Bash(git diff:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(curl:*)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git merge:*)"
    ],
    "additionalDirectories": [
      "~/src/witsy",
      "~/src/multi-llm-ts"
    ]
  }
}
